<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.com.android.weatherfinder">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".controller.ControllerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_weather"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_weather"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.WeatheFinder">
        <activity android:name=".feature.userlayer.activity.ui.WeatherActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".feature.userlayer.activity.ui.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.userlayer.activity.ui.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>